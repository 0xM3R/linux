
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define LEN 80

char *getline(FILE *fp)
{
	int i,c;
	char buf[LEN];
	
	for(i=0 ; i< LEN ; i++)
	{
		if ( ( c=getc(fp)) == EOF || c == '\n')
			break;
		
		buf[i] = (char)c;
	}
	
	if ( c == EOF && i == 0)
		return NULL;
	
	buf[i] = '\0';
	puts(buf);
	return buf;
}

int getaction()
{
	return 0; 
}

int main(void) {

	FILE *fp;
	fp=fopen("./test1","r");
	puts(getline(fp));
	puts(getline(fp));
	return EXIT_SUCCESS;
}
